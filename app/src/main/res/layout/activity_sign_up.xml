<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/sign_up_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3DBAF3"
        app:navigationIcon="@drawable/back_arrow"
        app:title="返回" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="191dp"
            android:src="@drawable/login" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册新用户"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#000000"
            />

        <EditText
            android:id="@+id/sign_up_user_id"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入学工号"
            />

        <EditText
            android:id="@+id/sign_up_user_password"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/sign_up_user_contact"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入联系方式"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择你所在的校区"
            android:textColor="#000000" />

        <RadioGroup
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/sign_up_user_mid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="中区"
                />

            <RadioButton
                android:id="@+id/sign_up_user_east"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="东区"
                />

            <RadioButton
                android:id="@+id/sign_up_user_west"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="西区"
                />

            <RadioButton
                android:id="@+id/sign_up_user_high"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="高新区"
                />

        </RadioGroup>

        <Button
            android:id="@+id/sign_up_button"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:background="#3DBAF3"
            android:foreground="?android:attr/selectableItemBackground"
            />

    </LinearLayout>
</LinearLayout>



