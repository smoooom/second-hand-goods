<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserActivity">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/category_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableBottom="@drawable/book"
                android:text="书"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"></Button>
            <Button
                android:id="@+id/category_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableBottom="@drawable/book"
                android:text="食物"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/category_cloths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableBottom="@drawable/book"
                android:text="服装"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"></Button>
            <Button
                android:id="@+id/category_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableBottom="@drawable/book"
                android:text="日用品"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"></Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_main_radio"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:paddingTop="5dp"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <RadioButton
                android:id="@+id/user_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/home"
                android:gravity="center"
                android:text="首页"
                android:textStyle="bold">
            </RadioButton>

            <RadioButton
                android:id="@+id/user_upload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/add32"
                android:gravity="center"
                android:text="发布"
                android:textStyle="bold"></RadioButton>
            <RadioButton
                android:id="@+id/user_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/add32"
                android:gravity="center"
                android:text="分类"
                android:textStyle="bold"></RadioButton>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
