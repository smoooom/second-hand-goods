<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddGoodsActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#F2F8FB">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/goods_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3DBAF3"
        app:navigationIcon="@drawable/back_arrow"
        app:title="返 回"/>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除该商品"
        android:backgroundTint="#CCFB1212"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
    />

    <TextView
        android:id="@+id/goods_detail_goods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="物品名称：暂时牌自行车"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#363A3E" />

    <TextView
        android:id="@+id/goods_detail_goods_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="物品类型：其他"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/goods_detail_goods_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="物品价格：100￥"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/goods_detail_goods_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="所在校区：东区"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/goods_detail_goods_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="联系方式：QQ:838606117"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#363A3E" />

    <TextView
        android:id="@+id/goods_detail_goods_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="物品描述：\n99新，基本没用过，因为我根本不会骑自行车。"
        android:textColor="#000000"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/goods_detail_goods_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:src="@drawable/bike"/>


</LinearLayout>